<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <stroke
                android:width="0.5dp"
                android:color="@color/white" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/white" /> <!-- 100% opaque white for checked state -->
        </shape>
    </item>
</layer-list>